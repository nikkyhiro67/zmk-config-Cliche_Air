#include "Cliche_Air.dtsi"
#include <input/processors.dtsi>

/* å³æ‰‹ï¼ˆPeripheralï¼‰: ãƒˆãƒ©ãƒƒã‚¯ãƒœãƒ¼ãƒ« + Non-LiPo ãƒãƒƒãƒ†ãƒª + LED + Auto Mouse Layer */

/* ãƒãƒˆãƒªã‚¯ã‚¹è¨­å®š */
&default_transform {
    col-offset = <6>;
};

/* ã‚­ãƒ¼ã‚¹ã‚­ãƒ£ãƒ³åˆ—è¨­å®š */
&kscan0 {
    col-gpios =
        <&gpio1 15 GPIO_ACTIVE_HIGH>,
        <&gpio1 14 GPIO_ACTIVE_HIGH>,
        <&gpio1 13 GPIO_ACTIVE_HIGH>,
        <&gpio1 12 GPIO_ACTIVE_HIGH>,
        <&gpio0 10 GPIO_ACTIVE_HIGH>;
};

/* SPI è¨­å®š */
&pinctrl {
    spi0_default: spi0_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 5)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                    <NRF_PSEL(SPIM_MISO, 0, 4)>;
        };
    };
    spi0_sleep: spi0_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 5)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                    <NRF_PSEL(SPIM_MISO, 0, 4)>;
            low-power-enable;
        };
    };
};

/* SPI ãƒ‡ãƒã‚¤ã‚¹è¨­å®š */
&spi0 {
    status = "okay";
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&spi0_default>;
    pinctrl-1 = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";
    cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;

    trackball: trackball@0 {
        compatible = "pixart,pmw3610";
        reg = <0>;
        spi-max-frequency = <2000000>;
        irq-gpios = <&gpio1 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        evt-type = <0>;
        x-input-code = <0x00>;
        y-input-code = <0x01>;
        status = "okay";
    };
};

/* ADC æœ‰åŠ¹åŒ– */
&adc {
    status = "okay";
};

/ {
    /* å³æ‰‹å°‚ç”¨ LED ãƒãƒ¼ãƒ‰ */
    sk6812_led_right: led_strip {
        compatible = "zmk,led-strip";
        label = "LED_STRIP_RIGHT";
        gpios = <&gpio0 16 GPIO_ACTIVE_HIGH>;
        chain-length = <10>;
        color-order = "GRB";
        status = "okay";
    };

    /* ãƒãƒƒãƒ†ãƒªé–¢é€£ */
    non_lipo_battery_right: non_lipo_battery_right {
        compatible = "zmk,non-lipo-battery";
        io-channels = <&adc 0>;
        status = "okay";
    };

    battery_monitor_right: battery_monitor_right {
        compatible = "zmk,battery-monitor";
        manager = <&non_lipo_battery_right>;
        status = "okay";
    };

    /* LED ã‚¤ãƒ³ã‚¸ã‚±ãƒ¼ã‚¿ */
    led_indicator_right: led_indicator_right {
        compatible = "zmk,led-indicator";
        led-strip = <&sk6812_led_right>;
        battery = <&battery_monitor_right>;
        power-gpios = <&gpio1 0 GPIO_ACTIVE_HIGH>;
        status = "okay";
    };

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
       ğŸ§  Auto Mouse Layer Processor è¨­å®š
       â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    mouse_auto_layer: mouse_auto_layer {
        compatible = "zmk,input-processor-auto-mouse-layer";
        /* ãƒˆãƒ©ãƒƒã‚¯ãƒœãƒ¼ãƒ«ãŒåœæ­¢ã—ã¦ã‹ã‚‰ãƒã‚¦ã‚¹ãƒ¬ã‚¤ãƒ¤ãƒ¼ã‚’ç„¡åŠ¹åŒ–ã™ã‚‹ã¾ã§ã®æ™‚é–“[ms] */
        timeout-ms = <700>;
        /* è‡ªå‹•ã§æœ‰åŠ¹åŒ–ãƒ»ç„¡åŠ¹åŒ–ã™ã‚‹ãƒ¬ã‚¤ãƒ¤ãƒ¼ç•ªå· */
        layer = <3>;
        status = "okay";
    };

    /* Input Processor ãƒªãƒ³ã‚¯ */
    input_processors {
        compatible = "zmk,input-processors";
        sensors = <&trackball>;
        processors = <&mouse_auto_layer>;
        status = "okay";
    };

    /* ZMK ç”¨ã® alias */
    chosen {
        zmk,battery = &non_lipo_battery_right;
    };

    aliases {
        battery-monitor = &battery_monitor_right;
        led-indicator = &led_indicator_right;
    };
};

#include "Cliche_Air.dtsi"
#include <input/processors.dtsi>

/* 右手（Peripheral）: トラックボール + Non-LiPo バッテリ + LED */

/* マトリクス設定 */
&default_transform {
    col-offset = <6>;
};

/* キースキャン列設定 */
&kscan0 {
    col-gpios =
        <&gpio1 15 GPIO_ACTIVE_HIGH>,
        <&gpio1 14 GPIO_ACTIVE_HIGH>,
        <&gpio1 13 GPIO_ACTIVE_HIGH>,
        <&gpio1 12 GPIO_ACTIVE_HIGH>,
        <&gpio0 10 GPIO_ACTIVE_HIGH>;
};

/* SPI 設定 */
&pinctrl {
    spi0_default: spi0_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 5)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                    <NRF_PSEL(SPIM_MISO, 0, 4)>;
        };
    };
    spi0_sleep: spi0_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 5)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                    <NRF_PSEL(SPIM_MISO, 0, 4)>;
            low-power-enable;
        };
    };
};

/* SPI デバイス設定 */
&spi0 {
    status = "okay";
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&spi0_default>;
    pinctrl-1 = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";
    cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;

    trackball: trackball@0 {
        compatible = "pixart,pmw3610";
        reg = <0>;
        spi-max-frequency = <2000000>;
        irq-gpios = <&gpio1 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        evt-type = <0>;
        x-input-code = <0x00>;
        y-input-code = <0x01>;
        status = "okay";
    };
};

/* ADC 有効化 */
&adc {
    status = "okay";
};

 / {
    /* 右手専用 LED ノード */
    sk6812_led_right: led_strip {
        compatible = "zmk,led-strip";
        label = "LED_STRIP_RIGHT";
        gpios = <&gpio0 16 GPIO_ACTIVE_HIGH>;
        chain-length = <10>;
        color-order = "GRB";
        status = "okay";
    };

    /* バッテリ関連 */
    non_lipo_battery_right: non_lipo_battery_right {
        compatible = "zmk,non-lipo-battery";
        io-channels = <&adc 0>; /* ← channel@0 は不要 */
        status = "okay";
    };

    battery_monitor_right: battery_monitor_right {
        compatible = "zmk,battery-monitor";
        manager = <&non_lipo_battery_right>;
        status = "okay";
    };

    /* LED インジケータ */
    led_indicator_right: led_indicator_right {
        compatible = "zmk,led-indicator";
        led-strip = <&sk6812_led_right>;
        battery = <&battery_monitor_right>;
        power-gpios = <&gpio1 0 GPIO_ACTIVE_HIGH>;
        status = "okay";
    };

    /* ZMK 用の alias */
    chosen {
        zmk,battery = &non_lipo_battery_right;
    };

    aliases {
        battery-monitor = &battery_monitor_right;
        led-indicator = &led_indicator_right;
    };
};

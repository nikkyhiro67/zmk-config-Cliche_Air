#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    /* 共通マトリクス変換（左右で col-offset を overlay 側で上書き） */
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <11>;
        rows = <4>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)                     RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)             RC(3,6) RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)     RC(3,7) RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)     RC(3,8) RC(3,9)                         RC(3,10)
        >;
    };

    /* 共通キースキャン（行のみ共通定義。列は overlay 側で上書き） */
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";

        /* ROW: P0.03, P0.28, P0.29, P1.11 (左右共通) */
        row-gpios = <&gpio0 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&gpio0 28 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
        status = "okay";
    };

    /* 共通 LED ストリップ（デフォルト disabled、overlay で有効化または右専用ノード定義） */
    sk6812_led: led_strip {
        compatible = "zmk,led-strip";
        label = "LED_STRIP";
        gpios = <&gpio0 16 GPIO_ACTIVE_HIGH>; /* default DIN pin (overlay may reassign) */
        chain-length = <1>;
        color-order = "GRB";
        status = "disabled";
    };

    /* エンコーダ（左ベース定義。overlay で有効化） */
    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <24>;
        status = "disabled";
    };

    /* 右エンコーダ：デフォルト無効（今回レイアウトでは右にエンコーダなし） */
    right_encoder: encoder_right {
        status = "disabled";
    };

    /* センサーリスト（左: encoder, 右: encoder disabled） */
    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <10>;
    };

    /* 共通 ADC ラベルを用意（overlay で channel を定義） */
    &adc {
        status = "okay";
        /* overlay 側で channel@0 を詳細設定する（左/右 別々に定義する） */
    };
};

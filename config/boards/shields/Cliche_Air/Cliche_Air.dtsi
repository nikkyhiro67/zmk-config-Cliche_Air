#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/led/led.h>
#include <dt-bindings/gpio/gpio.h>

/ {
    /* =========================================
     * キースキャン設定（Central / Left）
     * ========================================= */
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN0";
        diode-direction = "col2row";

        /* ROW: P0.03, P0.28, P0.29, P1.11 */
        row-gpios = <&gpio0 3 GPIO_ACTIVE_HIGH>,
                    <&gpio0 28 GPIO_ACTIVE_HIGH>,
                    <&gpio0 29 GPIO_ACTIVE_HIGH>,
                    <&gpio1 11 GPIO_ACTIVE_HIGH>;

        /* COL: P1.15, P1.14, P1.13, P1.12, P0.10, P0.09 */
        col-gpios = <&gpio1 15 GPIO_ACTIVE_HIGH>,
                    <&gpio1 14 GPIO_ACTIVE_HIGH>,
                    <&gpio1 13 GPIO_ACTIVE_HIGH>,
                    <&gpio1 12 GPIO_ACTIVE_HIGH>,
                    <&gpio0 10 GPIO_ACTIVE_HIGH>,
                    <&gpio0 9 GPIO_ACTIVE_HIGH>;

        status = "okay";
    };

    /* =========================================
     * キースキャンとマトリクス変換設定
     * ========================================= */
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <11>;
        rows = <4>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)                     RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)             RC(3,6) RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)     RC(3,7) RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)     RC(3,8) RC(3,9)                         RC(3,10)
        >;
    };

    /* =========================================
     * LEDストリップ定義（SK6812/WS2812）
     * ========================================= */
    sk6812_led: led_strip {
        compatible = "zmk,led-strip";
        label = "LED_STRIP";
        gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>;
        chain-length = <1>;
        color-order = "GRB";
        status = "okay";
    };

    /* =========================================
     * 共通エイリアス設定
     * ========================================= */
    aliases {
        led-indicator = &led_indicator;
        battery-monitor = &battery_monitor;
    };
};
